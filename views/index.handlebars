<div id="allInfo" class="container">

    <div id="firstSpace">

    </div>

    {{#each articles}}

    <div class="media" id="eachC" id={{this._id}}>
        <!-- PARA MARCAR CADA CONTENEDOR CON EL ID DE LA NOTICIA -->

        <div class="media-body">

            <table>
                <tr>
                    <th id="titles"><a href="{{this.link}}" target="_blank">{{this.title}}</a></th>

                    <th>
                        <form action="/save/{{this._id}}" method="POST">
                            <button id="wbutton" type="submit" class="status" value="{{this.status}}">{{this.status}}</button>
                            {{#unless this.note}}
                            <button id="wbutton" type="button" class="addnote-button" value="{{this._id}}">Add Note</button>
                            
                            {{/unless}}
                            {{#if this.note}}
                            <button id="wbutton" type="button" class="addnote-button" value="{{this._id}}">Edit Note</button>
                            {{/if}}
                        </form>
                    </th>
                </tr>

                <tr>
                    <th>
                        <h5 class="mt-0 mb-1">{{this.summary}}</h5>
                    </th>
                </tr>
            </table>
        </div>

        <img class="ml-3" src="{{this.img}}" alt="NO IMAGE"> <!-- IMAGEN-->

    </div>

    {{/each}}

</div>